<section class="login flex justify-center pt-24">
    <div class="w-full max-w-xs">
        <form action="/changepassword" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
          
          <% if(messages.error) { %>
            <span class="text-red-500 text-sm"><%= messages.error %></span>
          <% } %>
        
          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="currPass">
              Current Password
            </label>
            <span class="ml-56 mt-2 absolute text-right"><i class="fa fa-eye" id="ceye" title="Show"></i></span>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="currPass" name="currPass" type="password" placeholder="******************" autofocus>
          </div>
          <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
              New Password
            </label>
            <span class="ml-56 mt-2 absolute text-right"><i class="fa fa-eye" id="eye" title="Show"></i></span>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" name="password" type="password" placeholder="******************">
          </div>
          <div class="flex items-center justify-between">
            <button class="btn-primary rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
              Change Password
            </button>
          </div>
        </form>
      </div>
</section>
<script>
  var cpwd = document.getElementById('currPass');
  var pwd = document.getElementById('password');
  var ceye = document.getElementById('ceye');
  var eye = document.getElementById('eye');

  ceye.addEventListener('click', ctogglePass);
  eye.addEventListener('click', togglePass);
  ceye.addEventListener('mouseover', ctitle);
  eye.addEventListener('mouseover', title);

  function ctogglePass(){
    ceye.classList.toggle('active');
    (cpwd.type == 'password') ? cpwd.type = 'text' : cpwd.type = 'password';
  }
  function togglePass(){
    eye.classList.toggle('active');
    (pwd.type == 'password') ? pwd.type = 'text' : pwd.type = 'password';
  }
  
  function ctitle(){
    (cpwd.type == 'password') ? ceye.title = 'Show' : ceye.title = 'Hide';
  }
  function title(){
    (pwd.type == 'password') ? eye.title = 'Show' : eye.title = 'Hide';
  }

</script>